# File: .env.example
# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.
# Next Auth
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret

PORT=3222

NEXTAUTH_URL="https://"
NEXT_PUBLIC_NEXTAUTH_URL=https://

AUTH_SECRET= # Generated by create-t3-app.
AUTH_TRUST_HOST=

# Next Auth Discord Provider
AUTH_DISCORD_ID=
AUTH_DISCORD_SECRET=

# Drizzle
DB_ADMIN_USER=
DB_ADMIN_PASSWORD=
DB_HOST=
DB_PORT=
DB_NAME=
DB_OPTIONS="?sslmode=require"
DATABASE_URL="postgres://user:pass@localhost:5432/my_db?sslmode=require"

NEXT_PUBLIC_API_URL="https://.../" # trailing slash is required
STREAMING_KEY=

SONGBIRD_PUBLIC_API_URL="https://.../" # trailing slash is required
SONGBIRD_API_KEY=

ELECTRON_DEV_TOOLS=false

# Windows Code Signing (optional - for electron-builder)
# Option 1: Local Certificate Signing
WINDOWS_CERTIFICATE_FILE= # Path to .pfx or .p12 certificate file
WINDOWS_CERTIFICATE_PASSWORD= # Certificate password
WINDOWS_TIMESTAMP_URL=http://timestamp.digicert.com # Timestamp server (optional)

# Option 2: Azure Key Vault Signing (alternative to local certificate)
# AZURE_KEY_VAULT_URI= # e.g., https://myvault.vault.azure.net
# AZURE_KEY_VAULT_CERTIFICATE= # Certificate name in Key Vault
# AZURE_KEY_VAULT_CLIENT_ID= # Azure AD application/service principal ID
# AZURE_KEY_VAULT_CLIENT_SECRET= # Azure AD application/service principal secret
# AZURE_KEY_VAULT_TENANT_ID= # Azure AD tenant ID