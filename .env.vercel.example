# File: .env.vercel.example
# Vercel Environment Variables Template
# Copy these to your Vercel project settings â†’ Environment Variables
# https://vercel.com/your-team/darkfloor-art/settings/environment-variables
# ============================================
# DATABASE
# ============================================

DATABASE_URL="postgres://user:password@host:port/database?sslmode=require"
DB_ADMIN_USER="your_db_user"
DB_ADMIN_PASSWORD="your_db_password"
DB_HOST="your-db-host.neon.tech"
DB_PORT="5432"
DB_NAME="your_database_name"

# ============================================
# AUTHENTICATION (NextAuth v5)
# ============================================
AUTH_SECRET="your-auth-secret-here" # Generate: openssl rand -base64 32
AUTH_TRUST_HOST=true
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_NEXTAUTH_URL="https://your-domain.vercel.app"

# Discord OAuth
AUTH_DISCORD_ID="your_discord_client_id"
AUTH_DISCORD_SECRET="your_discord_client_secret"

# ============================================
# API KEYS
# ============================================
NEXT_PUBLIC_API_URL="https://api.darkfloor.art/" # trailing slash required
STREAMING_KEY="your_streaming_api_key"

SONGBIRD_PUBLIC_API_URL="https://songbird.darkfloor.art/" # trailing slash required
SONGBIRD_API_KEY="your_songbird_api_key"

# ============================================
# VERCEL-SPECIFIC (Auto-set by Vercel)
# ============================================
# These are automatically set by Vercel - DO NOT manually set them
# VERCEL="1"
# VERCEL_ENV="production" | "preview" | "development"
# VERCEL_URL="your-deployment-url.vercel.app"
# VERCEL_GIT_COMMIT_SHA="abc123..."

# ============================================
# OPTIONAL
# ============================================
PORT=3222 # Not used on Vercel (uses dynamic ports)
